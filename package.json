{
  "name": "cloudflare-test1",
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "dev": "vite dev",
    "build": "vite build",
    "preview": "npm run build && wrangler pages dev .svelte-kit/cloudflare --live-reload",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "deploy": "npm run build && wrangler pages deploy .svelte-kit/cloudflare",
    "tail": "wrangler pages deployment tail --project-name cloudflare-test1",
    "build-cf-types": "wrangler types && mv worker-configuration.d.ts src/",
    "watch": "npm-watch",
    "svelte-check": "svelte-check",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "devDependencies": {
    "@sveltejs/adapter-cloudflare": "5.*",
		"@sveltejs/kit": "2.*",
		"@sveltejs/vite-plugin-svelte": "5.*",
		"@types/node": "22.*",
		"svelte": "5.*",
		"svelte-check": "4.*",
		"svelte-preprocess": "6.*",
		"typescript": "5.*",
		"vite": "6.*",
		"vitest": "2.*",
		"wrangler": "3.*",
    "@cloudflare/workers-types": "4.*",
    "@fontsource/fira-mono": "5.*",
    "@langchain/google-genai": "0.*", 
    "@langchain/groq": "0.*",
    "@langchain/community": "0.*",
    "@neoconfetti/svelte": "2.*",
    "@sveltejs/adapter-auto": "3.*",
    "cheerio": "1.0.0-rc.12",
    "date-fns": "4.*",
    "langchain": "0.*",
    "npm-watch": "0.*",
    "openai": "4.*",
    "tslib": "2.*"
  },
  "watch": {
    "check": {
      "patterns": [
        "src"
      ],
      "extensions": "js,ts,svelte",
      "runOnChangeOnly": true,
      "quiet": false
    },
    "build": {
      "patterns": [
        "src",
        ".env"
      ],
      "extensions": "js,ts,svelte",
      "runOnChangeOnly": true,
      "quiet": false
    },
    "test": {
      "patterns": [
        "src"
      ],
      "extensions": "js,ts,svelte",
      "runOnChangeOnly": true,
      "quiet": false,
      "legacyWatch": true,
      "ignore": "node_modules",
      "delay": 2000
    }
  }
}
